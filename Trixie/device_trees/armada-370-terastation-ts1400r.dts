/dts-v1/;

#include <dt-bindings/input/input.h>
#include <dt-bindings/gpio/gpio.h>
#include "armada-370.dtsi"

/ {
	model = "Buffalo Terastation TS1400R";
	compatible = "buffalo,ts1400r", "marvell,armada370", "marvell,armada-370-xp";

	chosen
	{
		bootargs = "earlyprintk boot=local";
		stdout-path = "serial0:115200n8";
	};

	memory
	{
		device_type = "memory";
		reg = <0x00000000 0x20000000>; /* 512 MB */
	};

	soc
	{
		ranges = <MBUS_ID(0xf0, 0x01) 0 0xd0000000 0x100000
			MBUS_ID(0x01, 0xe0) 0 0xfff00000 0x100000
			MBUS_ID(0x09, 0x01) 0 0xf1100000 0x10000>;

		internal-regs
		{
			rtc@10300
			{
				status = "disabled";
			};

			i2c@11000
			{
				status = "okay";
				clock-frequency = <100000>;

				rs5c372: rs5c372@32
				{
					compatible = "ricoh,rs5c372a";
					reg = <0x32>;
				};
			};

			serial@12000
			{
				status = "okay";
			};

			//microcontroller interface, see https://github.com/1000001101000/Python_buffalo_libmicon
			serial@12100
			{
				status = "okay";
			};

			timer@20300
			{
				status = "okay";
			};

			usb@50000
			{
				status = "okay";
			};

			ethernet@74000
			{
				status = "okay";
				phy = <&phy0>;
				phy-mode = "rgmii-id";
			};
		};
	};

	regulators
	{
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;
		pinctrl-0 = <&hdd_pwr1 &hdd_pwr2 &hdd_pwr3 &hdd_pwr4>;
		pinctrl-names = "default";

		regulator@1
		{
			compatible = "regulator-fixed";
			reg = <1>;
			regulator-name = "HDD1 power";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			enable-active-high;
			regulator-always-on;
			regulator-boot-on;
			gpio = <&gpio0 8 GPIO_ACTIVE_HIGH>;
		};

		regulator@2
		{
			compatible = "regulator-fixed";
			reg = <2>;
			regulator-name = "HDD2 power";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			enable-active-high;
			regulator-always-on;
			regulator-boot-on;
			gpio = <&gpio0 7 GPIO_ACTIVE_HIGH>;
		};

		regulator@3
		{
			compatible = "regulator-fixed";
			reg = <3>;
			regulator-name = "HDD3 power";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			enable-active-high;
			regulator-always-on;
			regulator-boot-on;
			gpio = <&gpio1 20 GPIO_ACTIVE_HIGH>;
		};

		regulator@4
		{
			compatible = "regulator-fixed";
			reg = <4>;
			regulator-name = "HDD4 power";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			enable-active-high;
			regulator-always-on;
			regulator-boot-on;
			gpio = <&gpio1 16 GPIO_ACTIVE_HIGH>;
		};
	};


	restart_poweroff
	{
		compatible = "restart-poweroff";
	};

	gpio-keys
	{
		compatible = "gpio-keys";
		pinctrl-0 = <&hdd1_present &hdd2_present &hdd3_present &hdd4_present>;
		pinctrl-names = "default";

		hdd1-present
		{
			label = "Hard Disk 1 Present";
			linux,code = <KEY_PROG1>;
			gpios = <&gpio0 10 GPIO_ACTIVE_LOW>;
		};

		hdd2-present
		{
			label = "Hard Disk 2 Present";
			linux,code = <KEY_PROG2>;
			gpios = <&gpio0 11 GPIO_ACTIVE_LOW>;

		};

		hdd3-present
		{
			label = "Hard Disk 3 Present";
			linux,code = <KEY_PROG3>;
			gpios = <&gpio1 18 GPIO_ACTIVE_LOW>;
		};

		hdd4-present
		{
			label = "Hard Disk 4 Present";
			linux,code = <KEY_PROG4>;
			gpios = <&gpio1 19 GPIO_ACTIVE_LOW>;
		};
	};

};

&mdio
{
	phy0: ethernet-phy@0
	{
		reg = <0>;
		marvell,reg-init = <0x3 0x10 0xf000 0x0881>;
	};
};

&spi0
{
	status = "okay";
	pinctrl-0 = <&spi0_pins2>;

	spi-flash@0
	{
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "mx25l8005", "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <50000000>;

		partition@0
		{
			label = "u-boot";
			reg = <0x00000 0xf0000>;
			read-only;
		};

		partition@f0000
		{
			label = "u-boot-env";
			reg = <0xf0000 0x10000>;
			read-only;
		};
	};
};

&nand_controller
{
	status = "okay";

	nand@0
	{
		reg = <0>;
		label = "pxa3xx_nand-0";
		nand-rb = <0>;
		marvell,nand-keep-config;
		nand-on-flash-bbt;
		nand-ecc-strength = <4>;
		nand-ecc-step-size = <512>;
	
		partitions
		{
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0
			{
				label = "boot";
				reg = <0x00000000 0x02000000>;  /* 32MB */
			};

			partition@2000000
			{
				label = "rootfs";
				reg = <0x02000000 0x1e000000>;  /* 480MB */
			};
			
		};
	};
};

&pciec
{
	status = "okay";
	
	pcie@1,0
	{
		/* Port 0, Lane 0 */
		status = "okay";
	};

	pcie@2,0
	{
		/* Port 1, Lane 0 */
		status = "okay";
	};
};

&pinctrl
{

	hdd_pwr2: hdd-pwr2
	{
		marvell,pins = "mpp7";
		marvell,function = "gpo";
	};

	hdd_pwr1: hdd-pwr1
	{
		marvell,pins = "mpp8";
		marvell,function = "gpio";
	};

	hdd1_present: hdd1-present
	{
		marvell,pins = "mpp10";
		marvell,function = "gpio";
	};

	hdd2_present: hdd2-present
	{
		marvell,pins = "mpp11";
		marvell,function = "gpio";
	};

	hdd_pwr4: hdd-pwr4
	{
		marvell,pins = "mpp49";
		marvell,function = "gpio";
	};	

	hdd3_present: hdd3-present
	{
		marvell,pins = "mpp50";
		marvell,function = "gpio";
	};

	hdd4_present: hdd4-present
	{
		marvell,pins = "mpp51";
		marvell,function = "gpio";
	};

	hdd_pwr3: hdd-pwr3
	{
		marvell,pins = "mpp52";
		marvell,function = "gpio";	
	};

	uart1_pins: uart1-pins
	{
		marvell,pins = "mpp57", "mpp55";
		marvell,function = "uart1";
	};
};
&coherencyfab {broken-idle;};
