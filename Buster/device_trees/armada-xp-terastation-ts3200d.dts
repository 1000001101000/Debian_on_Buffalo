/dts-v1/;

#include <dt-bindings/input/input.h>
#include <dt-bindings/gpio/gpio.h>
#include "armada-xp-mv78230.dtsi"

/ {
	model = "Buffalo Terastation TS3200D";
	compatible = "buffalo,ts3200d", "marvell,armadaxp-mv78230", "marvell,armadaxp", "marvell,armada-370-xp";

	aliases
	{
		serial0 = &uart0;
		serial1 = &uart3;
		serial2 = &uart1;
		serial3 = &uart2;
	};

	chosen
	{
		bootargs = "earlyprintk boot=local";
		stdout-path = "serial0:115200n8";
	};

	memory
	{
		device_type = "memory";
		reg = <0 0x00000000 0 0x40000000>; /* 1GB */
	};

	soc
	{
		ranges = <MBUS_ID(0xf0, 0x01) 0 0 0xd0000000 0x100000
			 MBUS_ID(0x01, 0x1d) 0 0 0xfff00000 0x100000
			 MBUS_ID(0x09, 0x09) 0 0 0xf1100000 0x10000
			 MBUS_ID(0x09, 0x05) 0 0 0xf1110000 0x10000>;

		internal-regs
		{
			rtc@10300
			{
				status = "disabled";
			};

			i2c@11000
			{
				status = "okay";
				clock-frequency = <100000>;

				rs5c372: rs5c372@32
				{
					compatible = "ricoh,rs5c372a";
					reg = <0x32>;
				};
			};

			serial@12000
			{
				status = "okay";
			};

			//back serial port
			serial@12100
			{
				status = "okay";
			};

			serial@12200
			{
				status = "okay";
			};

			//microcontroller interface, see https://github.com/1000001101000/Python_buffalo_libmicon
			serial@12300
			{
				status = "okay";
			};

			timer@20300
			{
				status = "okay";
			};

			usb@50000
			{
				status = "okay";
			};

			usb@51000
			{
				status = "okay";
			};

			usb@52000
			{
				status = "okay";
			};

			ethernet@70000
			{
				status = "okay";
				phy = <&phy0>;
				phy-mode = "rgmii-id";
			};
 
			ethernet@74000
			{
				status = "okay";
				phy = <&phy1>;
				phy-mode = "rgmii-id";
			};

			sata@a0000
			{
				nr-ports = <2>;
				status = "okay";
			};
		};
	};

	regulators
	{
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;
		pinctrl-0 = <&hdd_pwr1 &hdd_pwr2>;
		pinctrl-names = "default";

		regulator@1
		{
			compatible = "regulator-fixed";
			reg = <1>;
			regulator-name = "HDD1 power";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			enable-active-high;
			regulator-always-on;
			regulator-boot-on;
			gpio = <&gpio0 26 GPIO_ACTIVE_HIGH>;
		};

		regulator@2
		{
			compatible = "regulator-fixed";
			reg = <2>;
			regulator-name = "HDD2 power";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			enable-active-high;
			regulator-always-on;
			regulator-boot-on;
			gpio = <&gpio0 27 GPIO_ACTIVE_HIGH>;
		};
	};


	restart_poweroff
	{
		compatible = "restart-poweroff";
	};

	gpio-keys
	{
		compatible = "gpio-keys";
		pinctrl-0 = <&hdd1_present &hdd2_present>;
		pinctrl-names = "default";

		hdd1-present
		{
			label = "Hard Disk 1 Present";
			linux,code = <KEY_PROG1>;
			gpios = <&gpio1 0 GPIO_ACTIVE_LOW>;
		};

		hdd2-present
		{
			label = "Hard Disk 2 Present";
			linux,code = <KEY_PROG2>;
			gpios = <&gpio1 1 GPIO_ACTIVE_LOW>;

		};
	};

};

&mdio
{
	phy0: ethernet-phy@0
	{
		reg = <0>;
	};

	phy1: ethernet-phy@1
	{
		reg = <1>;
	};
};

&spi0
{
	status = "okay";

	spi-flash@0
	{
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "mx25l8005", "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <50000000>;

		partition@00000
		{
			label = "u-boot";
			reg = <0x00000 0xf0000>;
			read-only;
		};

		partition@f0000
		{
			label = "u-boot-env";
			reg = <0xf0000 0x10000>;
			read-only;
		};
	};
};

&nand_controller
{
	status = "okay";

	nand@0
	{
		reg = <0>;
		label = "pxa3xx_nand-0";
		nand-rb = <0>;
		marvell,nand-keep-config;
		nand-on-flash-bbt;
		nand-ecc-strength = <4>;
		nand-ecc-step-size = <512>;
	
		partitions
		{
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0
			{
				label = "ubifs";
				reg = <0x00000000 0x20000000>;  /* 512MB */
			};
			
		};
	};
};

&pciec
{
	status = "okay";
	
	pcie@1,0
	{
		/* Port 0, Lane 0 */
		status = "okay";
	};

	pcie@5,0
	{
		/* Port 1, Lane 0 */
		status = "okay";
	};
};

&pinctrl
{
	hdd_pwr1: hdd-pwr1
	{
		marvell,pins = "mpp26";
		marvell,function = "gpio";
	};

	hdd_pwr2: hdd-pwr2
	{
		marvell,pins = "mpp27";
		marvell,function = "gpio";
	};

	hdd_pwr3: hdd-pwr3
	{
		marvell,pins = "mpp24";
		marvell,function = "gpio";
	};

	hdd_pwr4: hdd-pwr4
	{
		marvell,pins = "mpp29";
		marvell,function = "gpio";
	};

	hdd1_present: hdd1-present
	{
		marvell,pins = "mpp32";
		marvell,function = "gpio";
	};

	hdd2_present: hdd2-present
	{
		marvell,pins = "mpp33";
		marvell,function = "gpio";
	};
	
	hdd3_present: hdd3-present
	{
		marvell,pins = "mpp34";
		marvell,function = "gpio";
	};

	hdd4_present: hdd4-present
	{
		marvell,pins = "mpp35";
		marvell,function = "gpio";
	};};
