/dts-v1/;

#include <dt-bindings/input/input.h>
#include <dt-bindings/gpio/gpio.h>
#include "armada-370.dtsi"

/ {
	model = "Buffalo Linkstation LS410D";
	compatible = "buffalo,ls410d", "marvell,armada370", "marvell,armada-370-xp";

	chosen
	{
		bootargs = "earlyprintk boot=local";
		stdout-path = "serial0:115200n8";
	};

	memory
	{
		device_type = "memory";
		reg = <0x00000000 0x20000000>; /* 512 MB */
	};

	soc
	{
		ranges = <MBUS_ID(0xf0, 0x01) 0 0xd0000000 0x100000
			MBUS_ID(0x01, 0xe0) 0 0xfff00000 0x100000
			MBUS_ID(0x09, 0x01) 0 0xf1100000 0x10000>;

		internal-regs
		{
			rtc@10300
			{
				status = "disabled";
			};
			i2c@11000
			{
				status = "okay";
				clock-frequency = <100000>;

				rs5c372: rs5c372@32
				{
					compatible = "ricoh,rs5c372a";
					reg = <0x32>;
				};
			};

			serial@12000
			{
				status = "okay";
			};

			timer@20300
			{
				status = "okay";
			};

			usb@50000
			{
				status = "okay";
			};

			ethernet@74000
			{
				status = "okay";
				phy = <&phy0>;
				phy-mode = "rgmii-id";
			};

			sata@a0000
			{
				nr-ports = <1>;
				status = "okay";
			};
		};
	};

	regulators
	{
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;
		pinctrl-0 = <&usb_pwr &hdd_pwr1>;
		pinctrl-names = "default";

		regulator@0
		{
			compatible = "regulator-fixed";
			reg = <0>;
			regulator-name = "USB Power";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			enable-active-high;
			regulator-always-on;
			regulator-boot-on;
			gpio = <&gpio0 5 GPIO_ACTIVE_LOW>;
		};

		regulator@1
		{
			compatible = "regulator-fixed";
			reg = <1>;
			regulator-name = "HDD1 power";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			enable-active-high;
			regulator-always-on;
			regulator-boot-on;
			gpio = <&gpio0 8 GPIO_ACTIVE_HIGH>;
		};
	};

	gpio-leds
	{
		compatible = "gpio-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&power_led_white &power_led_red &power_led_orange &function_led_white>;

		power-led-white
		{
			label = "led:power:white";
			gpios = <&gpio1 22 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};

		power-led-red
		{
			label = "led:power:red";
			gpios = <&gpio1 23 GPIO_ACTIVE_HIGH>;
			default-state = "off";
		};

		power-led-orange
		{
			label = "led:power:orange";
			gpios = <&gpio1 25 GPIO_ACTIVE_HIGH>;
			default-state = "off";
		};

		function-led-white
		{
			label = "led:function:white";
			gpios = <&gpio1 27 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "disk-activity";
		};
	};

	restart_poweroff
	{
		compatible = "restart-poweroff";
	};

	gpio-keys
	{
		compatible = "gpio-keys";
		pinctrl-0 = <&hdd1_present &power_switch &function_button>;
		pinctrl-names = "default";

		hdd1-present
		{
			label = "Hard Disk 1 Present";
			linux,code = <KEY_PROG1>;
			gpios = <&gpio0 11 GPIO_ACTIVE_LOW>;
		};

		power-switch
		{
			label = "Power Switch";
			linux,code = <KEY_ESC>;
			gpios = <&gpio0 15 GPIO_ACTIVE_LOW>;
		};

		function-button
		{
			label = "Function Button";
			linux,code = <KEY_OPTION>;
			gpios = <&gpio0 16 GPIO_ACTIVE_LOW>;
		};
	};

	gpio-fan
	{
		compatible = "gpio-fan";
		pinctrl-0 = <&fan_low &fan_high &fan_alarm>;
		pinctrl-names = "default";
		gpios = <&gpio0 13 GPIO_ACTIVE_HIGH
			 &gpio0 14 GPIO_ACTIVE_HIGH>;
		gpio-fan,speed-map = <0    3
				      2050 2
				      3600 1
				      4500 0>;
		alarm-gpios = <&gpio0 10 GPIO_ACTIVE_HIGH>;
	};
};

&mdio
{
	phy0: ethernet-phy@0
	{
		reg = <0>;
		//LED0: on/blink on act, LED1: off (not connected) LED2: Force on (signals boot loader to reboot by default) 
		marvell,reg-init = <0x3 0x10 0xf000 0x0981>;
	};

};

&spi0
{
	status = "okay";
	pinctrl-0 = <&spi0_pins2>;

	spi-flash@0
	{
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "mx25l8005", "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <50000000>;

		partition@00000
		{
			label = "u-boot";
			reg = <0x00000 0xf0000>;
			read-only;
		};

		partition@f0000
		{
			label = "u-boot-env";
			reg = <0xf0000 0x10000>;
			read-only;
		};
	};
};



&pinctrl
{
	usb_pwr: usb-pwr
	{
		marvell,pins = "mpp5";
		marvell,function = "gpo";
	};

	hdd_pwr1: hdd-pwr1
	{
		marvell,pins = "mpp8";
		marvell,function = "gpio";
	};


	fan_alarm: fan-alarm
	{
		marvell,pins = "mpp10";
		marvell,function = "gpio";
	};
	hdd1_present: hdd1-present
	{
		marvell,pins = "mpp11";
		marvell,function = "gpio";
	};


	fan_high: fan-high
	{
		marvell,pins = "mpp13";
		marvell,function = "gpio";
	};
	
	fan_low: fan-low
	{
		marvell,pins = "mpp14";
		marvell,function = "gpio";
	};

	power_switch: power-switch
	{
		marvell,pins = "mpp15";
		marvell,function = "gpio";
	};
	
	function_button: function-button
	{
		marvell,pins = "mpp16";
		marvell,function = "gpio";
	};

	power_led_white: power-led-white
	{
		marvell,pins = "mpp54";
		marvell,function = "gpo";
	};

	power_led_red: power-led-red
	{
		marvell,pins = "mpp55";
		marvell,function = "gpio";
	};

	power_led_orange: power-led-orange
	{
		marvell,pins = "mpp57";
		marvell,function = "gpio";
	};

	function_led_white: function-led-white
	{
		marvell,pins = "mpp59";
		marvell,function = "gpo";
	};

};
